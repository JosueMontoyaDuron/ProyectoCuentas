@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Eliminar Cuenta";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">Eliminar Cuenta</h1>
                </div>
                <div class="card-body">
                    <h3 class="text-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill"></i> ¿Está seguro que desea eliminar esta cuenta?
                    </h3>
                    <p class="text-muted">Esta acción es irreversible.</p>

                    <h5 class="card-title text-dark mt-4">Detalles de la Cuenta a Eliminar</h5>
                    <hr />

                    <dl class="row mb-4 bg-light p-3 border rounded">
                        <dt class="col-sm-4 text-start fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.numero)
                        </dt>
                        <dd class="col-sm-8 text-end">
                            <span class="badge bg-dark fs-6">@Html.DisplayFor(model => model.numero)</span>
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.descripcion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.descripcion)
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.creditos)
                        </dt>
                        <dd class="col-sm-8 text-end text-success">
                            @Html.DisplayFor(model => model.creditos)
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.debitos)
                        </dt>
                        <dd class="col-sm-8 text-end text-danger">
                            @Html.DisplayFor(model => model.debitos)
                        </dd>

                        <dt class="col-sm-4 text-start fw-bold text-dark border-top pt-2 mt-2">
                            @Html.DisplayNameFor(model => model.balance)
                        </dt>
                        <dd class="col-sm-8 text-end border-top pt-2 mt-2">
                            <span class="badge bg-warning text-dark fs-6">@Html.DisplayFor(model => model.balance)</span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancelar y Regresar
                        </a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
