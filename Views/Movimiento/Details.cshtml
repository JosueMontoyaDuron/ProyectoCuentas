@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Detalles del Movimiento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-info">
                <div class="card-header bg-info text-white">
                    <h1 class="h4 mb-0">Detalles del Movimiento</h1>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-dark">Información de la Transacción</h5>
                    <hr />

                    <dl class="row g-3">

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.IdCuenta)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-dark fs-6">@Html.DisplayFor(model => model.IdCuenta)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Tipo)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Tipo == 1) // Deposito (Crédito)
                            {
                                <span class="badge bg-success fs-6"><i class="bi bi-arrow-up-right-circle"></i> Depósito (Crédito)</span>
                            }
                            else if (Model.Tipo == 2) // Retiro (Débito)
                            {
                                <span class="badge bg-danger fs-6"><i class="bi bi-arrow-down-left-circle"></i> Retiro (Débito)</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.Tipo)</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Monto)
                        </dt>
                        <dd class="col-sm-8 fw-bolder fs-5 @(Model.Tipo == 2 ? "text-danger" : "text-success")">
                            @Html.DisplayFor(model => model.Monto)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Concepto)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Concepto)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>

                    </dl>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Regresar a la Lista
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-dark">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>