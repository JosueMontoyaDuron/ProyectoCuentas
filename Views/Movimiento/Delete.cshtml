@model Cuentas.Models.Movimiento

@{
    ViewData["Title"] = "Eliminar Movimiento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">Confirmar Eliminación</h1>
                </div>
                <div class="card-body">

                    <h3 class="text-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill"></i> ¿Está seguro que desea eliminar este movimiento?
                    </h3>

                    <p class="text-muted">Esta acción es irreversible y **deberá ajustar manualmente** el saldo de la cuenta si el movimiento ya fue aplicado.</p>
                    <hr />

                    <h5 class="card-title text-dark mb-3">Detalles del Movimiento a Eliminar:</h5>

                    <dl class="row g-3">

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.IdCuenta)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-dark fs-6">@Html.DisplayFor(model => model.IdCuenta)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Tipo)
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Tipo == 1) // Deposito (Crédito)
                            {
                                <span class="badge bg-success fs-6"><i class="bi bi-arrow-up-right-circle"></i> Depósito (Crédito)</span>
                            }
                            else if (Model.Tipo == 2) // Retiro (Débito)
                            {
                                <span class="badge bg-danger fs-6"><i class="bi bi-arrow-down-left-circle"></i> Retiro (Débito)</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.Tipo)</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Monto)
                        </dt>
                        <dd class="col-sm-8 fw-bolder fs-5 @(Model.Tipo == 2 ? "text-danger" : "text-success")">
                            @Html.DisplayFor(model => model.Monto)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Concepto)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Concepto)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>

                    </dl>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar y Regresar
                    </a>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Eliminación
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>