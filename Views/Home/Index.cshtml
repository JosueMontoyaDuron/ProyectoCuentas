@{
    ViewData["Title"] = "Panel de Inicio";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg p-5 bg-light border-0">
                <div class="text-center">

                    <h1 class="display-3 fw-bold text-success mb-3">
                        <i class="bi bi-bank"></i> Sistema Contable
                    </h1>

                    <p class="lead mb-5 text-secondary">
                        Bienvenido. Seleccione la sección a la que desea acceder.
                    </p>

                    <div class="d-grid gap-4 col-md-8 mx-auto">

                        <a asp-controller="Cuenta" asp-action="Index" class="btn btn-success btn-lg py-3 shadow-sm">
                            <i class="bi bi-wallet2"></i> Administrar Cuentas
                        </a>

                        <a asp-controller="Movimiento" asp-action="Index" class="btn btn-primary btn-lg py-3 shadow-sm">
                            <i class="bi bi-cash-stack"></i> Registrar Movimientos
                        </a>

                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <small class="text-muted">
                    <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="text-decoration-none">
                        Aprender sobre desarrollo con ASP.NET Core
                    </a>
                </small>
            </div>
        </div>
    </div>
</div>